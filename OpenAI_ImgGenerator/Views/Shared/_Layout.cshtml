<!DOCTYPE html>
<html lang="en" class="h-100" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iCreate</title>

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />   

</head>
<body class="d-flex h-100 text-center text-bg-dark bg-black">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="cover-container-header mb-auto">
            <div>
            <h3 class="float-md-start mb-0">iCreate</h3>
            <nav class="nav nav-masthead justify-content-center float-md-end">
                <a class="nav-link fw-bold py-1 px-0 active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link fw-bold py-1 px-0" asp-controller="Info" asp-action="About">About</a>
            </nav>
        </div>
    </header>
    <main class ="px-3">        
        @RenderBody()
    </main>

    <footer class="mt-auto text-white-50">
        <p class="text-center text-body-secondary">© 2023 Company, Inc</p>
      </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)    

    </div>    
</body>
</html>
