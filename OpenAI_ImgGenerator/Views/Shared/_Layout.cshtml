<!DOCTYPE html>
<html lang="en" class="h-100" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iCreate</title>

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />   

</head>
<body class="d-flex text-center text-bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-4 mx-auto flex-column">
        <header class="mb-auto">
        <div>
            <h3 class="float-md-start mb-0">iCreate</h3>
            <nav class="nav nav-masthead justify-content-center float-md-end">
                <a class="nav-link fw-bold py-1 px-0 active" aria-current="page" href="#">Home</a>
                <a class="nav-link fw-bold py-1 px-0" href="#">About</a>
            </nav>
        </div>
    </header>
        <div class="container">
            <video class="video-bg" autoplay muted loop>
                <source src="~/icons/file.mp4" type="video/mp4" />
            </video>
            <img class="img-bg-1" src="~/icons/b1.jpg" />
            <img class="img-bg-2" src="~/icons/b3.png" />
            <img class="img-bg-3" src="~/icons/Dopple-Header-01_edited.webp" />
            <img class="img-bg-4" src="~/icons/c3.jpg" />
            <img class="img-bg-6" src="~/icons/head.gif" />
            <img class="img-bg-5" src="~/icons/a1.webp" />
        </div>

    <main class ="px-3">        
        @RenderBody()
    </main>

    <footer class="mt-auto text-white-50">
        <p class="text-center text-body-secondary">© 2023 Company, Inc</p>
      </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)    

    </div>    
</body>
</html>

